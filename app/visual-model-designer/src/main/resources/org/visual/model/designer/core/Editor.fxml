<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.visual.model.graph.editor.core.view.GraphEditorContainer?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.visual.model.designer.controller.EditorController">
    <ToolBar>
        <!--        <Menu text="File">-->
        <Button text="Load File" onAction="#load"/>
        <Button text="Default Skins - Small" onAction="#loadSample"/>
        <Button text="Default Skins - Large" onAction="#loadSampleLarge"/>
        <Separator/>
        <Button text="Tree Skins" onAction="#loadTree"/>
        <Button text="Titled Skins" onAction="#loadTitled"/>

        <Button text="Save" onAction="#save"/>
        <Button text="Clear All" onAction="#clearAll"/>
        <Separator/>
        <Button text="Exit" onAction="#exit"/>
        <!--        </Menu>-->
        <Button text="Undo" onAction="#undo"/>
        <Button text="Redo" onAction="#redo"/>
        <Separator/>
        <Button text="Copy" onAction="#copy"/>
        <Button text="Paste" onAction="#paste"/>
        <Separator/>
        <!-- Added blank spaces to force menu to be wider. -->
        <Button text="Select All          " onAction="#selectAll"/>
        <Button text="Delete" onAction="#deleteSelection"/>
        <Button text="Add Node" onAction="#addNode"/>
        <Button text="Add Connector" fx:id="addConnectorButton" onAction="#addConnector"/>
        <Button text="Clear Connectors" fx:id="clearConnectorsButton" onAction="#clearConnectors"/>
        <RadioButton fx:id="inputConnectorTypeButton" text="Input" selected="true"/>
        <RadioButton fx:id="outputConnectorTypeButton" text="Output"/>
        <RadioButton fx:id="leftConnectorPositionButton" text="Left" selected="true"/>
        <RadioButton fx:id="rightConnectorPositionButton" text="Right"/>
        <RadioButton fx:id="topConnectorPositionButton" text="Top"/>
        <RadioButton fx:id="bottomConnectorPositionButton" text="Bottom"/>
        <RadioButton fx:id="showGridButton" text="Show Grid"/>
        <RadioButton fx:id="snapToGridButton" text="Snap to Grid"/>
        <RadioButton fx:id="defaultSkinButton" text="Default" onAction="#setDefaultSkin"
                     selected="true"/>
        <RadioButton fx:id="treeSkinButton" text="Tree" onAction="#setTreeSkin"/>
        <RadioButton fx:id="titledSkinButton" text="Titled" onAction="#setTitledSkin"/>
        <RadioButton fx:id="detouredStyleButton" text="Detours" onAction="#setDetouredStyle"
                     selected="true"/>
        <RadioButton fx:id="gappedStyleButton" text="Gaps" onAction="#setGappedStyle"/>
        <ToggleButton fx:id="minimapButton" onAction="#toggleMinimap" focusTraversable="false"
                      AnchorPane.rightAnchor="10"
                      AnchorPane.topAnchor="4"/>
    </ToolBar>
    <GraphEditorContainer fx:id="graphEditorContainer" minWidth="0" minHeight="0" maxWidth="+Infinity"
                          maxHeight="+Infinity" VBox.vgrow="ALWAYS"/>
</VBox>
