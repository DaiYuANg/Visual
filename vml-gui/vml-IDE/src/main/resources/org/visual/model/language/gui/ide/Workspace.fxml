<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import io.github.eckig.grapheditor.core.view.GraphEditorContainer?>
<VBox fx:id="rootVBox" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@styles/Application.css"
      fx:controller="org.visual.model.language.gui.ide.controllers.WorkspaceController"
      prefHeight="400.0" prefWidth="600.0">
    <fx:include source="TitleBar.fxml"/>
    <BorderPane fx:id="layoutPane" VBox.vgrow="ALWAYS">
        <top>
        </top>
        <left>
            <Label text="left"/>
        </left>
        <center>
            <HBox VBox.vgrow="ALWAYS">
                <fx:include source="Graphics.fxml"/>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <GraphEditorContainer prefWidth="500" minHeight="500"/>
                </AnchorPane>
            </HBox>
        </center>
        <right>
            <Label text="right"/>
        </right>
        <bottom>
            <Label text="button"/>
        </bottom>
    </BorderPane>
</VBox>