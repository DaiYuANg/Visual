<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<HBox fx:id="titleBar" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.visual.model.language.gui.ide.controllers.TitleBarController"
      onMousePressed="#handleMousePressed"
      onMouseDragged="#handleMouseDragged"
      onMouseReleased="#handleMouseDragReleased"
>
    <fx:include source="GlobalMenu.fxml"/>
    <HBox fx:id="common" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
        <Button onMouseClicked="#minimizeWindow">
            <graphic>
                <FontIcon iconLiteral="far-window-minimize" iconSize="64"/>
            </graphic>
        </Button>
        <Button onMouseClicked="#maximizeWindow">
            <graphic>
                <FontIcon iconLiteral="far-window-maximize" iconSize="64"/>
            </graphic>
        </Button>
        <Button fx:id="closeButton" onMouseClicked="#closeWindow">
            <graphic>
                <FontIcon iconLiteral="far-window-close" iconSize="64"/>
            </graphic>
        </Button>
    </HBox>
</HBox>