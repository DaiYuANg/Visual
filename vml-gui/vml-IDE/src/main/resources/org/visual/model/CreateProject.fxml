<?xml version="1.0" encoding="UTF-8"?>
<?language groovy?>
<?import atlantafx.base.controls.CustomTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.visual.model.controllers.CreateProjectController"
      fx:id="vbox" cache="true" style="-fx-font-family: 'jetbrains mono'">
    <HBox fx:id="hbox" VBox.vgrow="ALWAYS">
        <HBox fx:id="leftPane" prefWidth="300.0">
            <ListView fx:id="listView" HBox.hgrow="ALWAYS">
                <String fx:value="Item 1"/>
                <String fx:value="Item 2"/>
                <String fx:value="Item 3"/>
            </ListView>
        </HBox>
        <Separator fx:id="separator" VBox.vgrow="ALWAYS" orientation="VERTICAL" style="-fx-padding: 0"/>
        <VBox HBox.hgrow="ALWAYS" fx:id="rightPane">
            <HBox HBox.hgrow="ALWAYS">
                <GridPane HBox.hgrow="ALWAYS" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints fillWidth="true" halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints fillWidth="true" halignment="LEFT" hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints fillHeight="true" valignment="CENTER" vgrow="NEVER"/>
                        <RowConstraints fillHeight="true" valignment="CENTER" vgrow="NEVER"/>
                        <RowConstraints fillHeight="true" valignment="CENTER" vgrow="NEVER"/>
                        <RowConstraints fillHeight="true" valignment="CENTER" vgrow="NEVER"/>
                    </rowConstraints>
                    <CustomTextField HBox.hgrow="ALWAYS"/>
                    <Button>
                        <graphic>
                            <FontIcon iconLiteral="di-java" iconSize="64"/>
                        </graphic>
                    </Button>
                </GridPane>
            </HBox>
            <ScrollPane HBox.hgrow="ALWAYS">
                <ListView fx:id="projectView" prefWidth="450.0" minHeight="300.0" HBox.hgrow="ALWAYS">
                    <HBox>
                        <Label HBox.hgrow="ALWAYS" text="Project"/>
                    </HBox>
                    <HBox>
                        <Label text="12"/>
                    </HBox>
                </ListView>
            </ScrollPane>
            <ButtonBar HBox.hgrow="ALWAYS">
                <buttons>
                    <Button text="save" fx:id="saveButton"/>
                    <Button text="save"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </HBox>
    <fx:script source="scripts/CreateProjectScript.groovy"/>
</VBox>
